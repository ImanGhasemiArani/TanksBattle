<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragment.MultiplayerMenuFragment"
android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_multiplayer_menu"
        android:scaleType="centerCrop"
        android:id="@+id/multiplayer_menu_background"/>


    <TextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplayer"
        android:textSize="60dp"
        android:textColor="@color/gameName"
        android:fontFamily="@font/battleground"
        android:layout_alignParentEnd="true"
        android:layout_margin="50dp"/>


    <Button
        android:id="@+id/btnMultiplayerViaBluetooth"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:text="via Bluetooth"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/battleground"
        android:layout_alignTop="@+id/btnBack"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"/>


    <Button
        android:id="@+id/btnMultiplayerViaHotSpot"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:text="via Hotspot"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/battleground"
        android:layout_below="@id/btnMultiplayerViaBluetooth"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>


    <Button
        android:id="@+id/btnMultiplayerViaInternet"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:text="via Internet"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/battleground"
        android:layout_below="@id/btnMultiplayerViaHotSpot"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"/>


</RelativeLayout>